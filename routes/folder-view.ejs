<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a href="/dashboard" class="navbar-brand"><i class="fas fa-cloud"></i> File Uploader</a>
            <div>
                <span class="text-light me-3">Hello, <%= user.name %>!</span>
                <a href="/auth/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                <% if (folder.parent) { %>
                    <li class="breadcrumb-item"><a href="/folders/<%= folder.parent.id %>"><%= folder.parent.name %></a></li>
                <% } %>
                <li class="breadcrumb-item active"><%= folder.name %></li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1><i class="fas fa-folder-open text-warning"></i> <%= folder.name %></h1>
                <% if (folder.description) { %>
                    <p class="text-muted"><%= folder.description %></p>
                <% } %>
            </div>
            <div>
                <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#folderModal">
                    <i class="fas fa-folder-plus"></i> New Folder
                </button>
                <a href="/files/upload" class="btn btn-success">
                    <i class="fas fa-upload"></i> Upload
                </a>
            </div>
        </div>

        <!-- Contents -->
        <div class="row">
            <!-- Subfolders -->
            <% folders.forEach(subfolder => { %>
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-folder fa-3x text-warning mb-2"></i>
                        <h6><%= subfolder.name %></h6>
                        <small class="text-muted"><%= subfolder.description || '' %></small>
                        <div class="mt-2">
                            <a href="/folders/<%= subfolder.id %>" class="btn btn-sm btn-primary">Open</a>
                            <form method="POST" action="/folders/<%= subfolder.id %>?_method=DELETE" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Delete folder?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>

            <!-- Files -->
            <% files.forEach(file => { %>
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-file fa-3x text-secondary mb-2"></i>
                        <h6><%= file.originalName %></h6>
                        <small class="text-muted"><%= (file.size / 1024).toFixed(1) %> KB</small>
                        <div class="mt-2">
                            <a href="/files/<%= file.id %>" class="btn btn-sm btn-info">View</a>
                            <a href="/files/<%= file.id %>/download" class="btn btn-sm btn-success">Download</a>
                            <form method="POST" action="/files/<%= file.id %>?_method=DELETE" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Delete file?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <% if (folders.length === 0 && files.length === 0) { %>
        <div class="text-center mt-5">
            <i class="fas fa-folder-open fa-5x text-muted mb-3"></i>
            <h3>Folder is empty</h3>
            <p class="text-muted">Create a subfolder or upload files</p>
        </div>
        <% } %>
    </div>

    <!-- Create Folder Modal -->
    <div class="modal fade" id="folderModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Subfolder</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/folders/create" method="POST">
                    <input type="hidden" name="parentId" value="<%= folder.id %>">
                    <div class="modal-body">
                        <div class="mb-3">
                            <input type="text" class="form-control" name="name" placeholder="Folder name" required>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" name="description" placeholder="Description (optional)"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>